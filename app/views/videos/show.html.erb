<h1><%= @video.title %></h1>

<h3><%= @video.description %></h3>

<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @video.youtube_id %>" frameborder="0" allowfullscreen></iframe>

<br><br>

<input type="text" id="comment" name="comment[content]" placeholder="Your comment">
<input type="submit" id="commentSubmit" value="Submit">

<br><br>

<div id="commentArea">
  <% @comments.each do |comment| %>
    <form action="/comments/<%= comment.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <label for="comment"><%= comment.content %>"</label>
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input type="hidden" name="video_id" value="<%= @video.id %>">
      <input type="submit" value="Delete"><br>
    </form>
  <% end %>
</div>

<script>
  $(document).ready(function() {
    $('#commentSubmit').click(function(e) {
      $.ajax({
        url: '/videos/<%= @video.id %>/comments',
        type: 'post',
        data: {
          'comment[content]': $('#comment').val(),
          'authenticity_token': '<%= form_authenticity_token %>'},
        success: function(result) {
          $('#commentList').append($('#comment').val() + '<br>');
        }
      });
    });
  });
</script>
