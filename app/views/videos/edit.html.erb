<form action=<%= "/videos/#{params[:id]}" %> method="post">
  <!-- This is needed because the browser does not support PUT in a form -->
  <!-- However, if Rails sees this input, it will treat it as a PUT request -->
  <!-- (this is normally generated by the built-in form_tag helper method) -->
  <input name="_method" type="hidden" value="put">

  <label for="title">Title:</label>
  <input type="text" id="title" name="video[title]">

  <label for="description">Description:</label>
  <input type="text" id="description" name="video[description]">

  <label for="youtube_id">Youtube ID:</label>
  <input type="text" id="youtube_id" name="video[youtube_id]">

  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <input type="submit" value="submit">
</form>
